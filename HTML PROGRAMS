INPUT:

<!DOCTYPE html>
<html>
<head>
    <title>Email Validation</title>
</head>
<body>
    <h2>Email Address Validator</h2>
    <form method="post" action="">
        Enter Email: <input type="text" name="email" required>
        <input type="submit" value="Validate">
    </form>
    <hr>
    <?php if (!empty($message)) echo $message; ?>
</body>
